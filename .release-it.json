{
  "github": {
    "release": false,
    "commitMessage": "release(版本发布): ${version}"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "header": "# 升级报告",
      "preset": {
        "name": "angular",
        "types": [
          {
            "type": "feat",
            "section": "新增功能"
          },
          {
            "type": "fix",
            "section": "修复Bug"
          },
          {}
        ]
      },
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true,
      "strictSemVer": true
    }
  }
}
